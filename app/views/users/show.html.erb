<% provide(:title, @user.pretty_name) %>
<div class="row">
	<aside class="span4">
    	<section>
    	  	<a href="<%= user_path(@user) %>">
			</a>
			<h1>
  				<%= @user.handle %>
			</h1>
			<% if @user.elections.any? %>
				<br>
				<%= link_to "#{@user.pretty_name}'s elections", elections_user_path(@user) %>
				<br><br>
				<% @user.elections.each do |election| %>
					<%= link_to election.name, election %>
				<br>
				<% end %>
			<% end %>
    	</section>
  	</aside>
</div>