<% provide(:title, 'Sign up') %>
<h1>Sign up</h1>

<%= form_for @user, html: { autocomplete: :off } do |f| %>
	<%= render 'shared/error_messages', object: f.object %>

    <%= f.text_field :nickname, placeholder: "what would you like everyone to call you?" %>

	<%= f.text_field :email, placeholder: "email" %>

	<%= f.password_field :password, placeholder: "password" %>

	<%= f.password_field :password_confirmation, placeholder: "type password again" %>
<br>

	<%= f.submit "Save", disable_with: "Saving ...", class: "btn btn-large btn-primary btn-block" %>

<% end %>