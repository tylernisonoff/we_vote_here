<% provide(:title, 'Sign up') %>
<h1>Sign up</h1>

<%= form_for @user, html: { autocomplete: :off } do |f| %>
	<%= render 'shared/error_messages', object: f.object %>

	<%= f.label "Nickname (optional)" %>
    <%= f.text_field :nickname, placeholder: "what would you like everyone to call you?" %>

	<%= f.label :email %>
	<%= f.text_field :email, placeholder: "email" %>

	<%= f.label :password %>
	<%= f.password_field :password, placeholder: "password" %>

	<%= f.label :password_confirmation, "Confirmation" %>
	<%= f.password_field :password_confirmation, placeholder: "type password again" %>
<br>

	<%= f.submit "Save", class: "btn btn-large btn-primary" %>

<% end %>