<%= form_for @election do |f| %>
	<%= render 'shared/error_messages', object: f.object %>

	<%= f.label :name %>
	<%= f.text_field :name, value: @election.name %>

	<%= f.label :info, "Voting instructions:" %>
	<%= f.text_area :info, value: @election.info %>

	<br><br>

	<%= f.label :start_time, "Start time:" %>
	<%= f.datetime_select :start_time, value: @election.start_time %>

	<%= f.label :finish_time, "Finish time:" %>
	<%= f.datetime_select :finish_time, value: @election.finish_time %>
	<br><br>
	
	Election Privacy:
	<br>
	<%= f.radio_button :privacy, 0, checked: !@election.privacy %>
	<%= f.label :privacy, "Public", style: "display:inline" %>
	<br>
	<%= f.radio_button :privacy, 1, checked: @election.privacy %>
	<%= f.label :privacy, "Private", style: "display:inline" %>

	<br><br>

	Dynamic voting:
	<br>
	<%= f.radio_button :display_votes_as_created, 0, checked: !@election.dynamic %>
	<%= f.label :display_votes_as_created, "Off", style: "display:inline" %>
	<br>
	<%= f.radio_button :dynamic, 1, checked: @election.dynamic %>
	<%= f.label :dynamic, "On", style: "display:inline" %>

	<br><br>


<br><br><br>

	<%= f.submit "Submit", class: "btn btn-large btn-primary" %>
<% end %>