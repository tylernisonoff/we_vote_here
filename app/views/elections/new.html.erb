<% provide(:title, 'Create an election') %>
<h1>Create an election</h1>

<%= form_for @election do |f| %>
	<%= render 'shared/error_messages', object: f.object %>

	<%= f.text_field :name, placeholder: "election name" %>

	<%= f.text_area :info, placeholder: "enter voting instructions here" %>

	<%= f.text_area :emails, value: "", placeholder: "enter email addresses here. please separate emails by commas" %>

	<br><br>

	<%= f.label :start_time, "Start time:" %>
	<%= f.datetime_select :start_time, default: Time.now %>

	<%= f.label :finish_time, "Finish time:" %>
	<%= f.datetime_select :finish_time, default: Time.now + 1.week %>
	<br><br>
	
	Election Privacy:
	<br>
	<%= f.radio_button :privacy, 0, checked: false %>
	<%= f.label :privacy, "Public", style: "display:inline" %>
	<br>
	<%= f.radio_button :privacy, 1, checked: true %>
	<%= f.label :privacy, "Private", style: "display:inline" %>

	<br><br>

	Dynamic voting:
	<br>
	<%= f.radio_button :display_votes_as_created, 0, checked: false %>
	<%= f.label :display_votes_as_created, "Off", style: "display:inline" %>
	<br>
	<%= f.radio_button :dynamic, 1, checked: true %>
	<%= f.label :dynamic, "On", style: "display:inline" %>

	<br><br>


<br><br><br>

	<%= f.submit "Next step", class: "btn btn-large btn-primary" %>
<% end %>