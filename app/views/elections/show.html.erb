<% provide(:title, @election.name) %>
<div>

Owner:
  <%= link_to @election.user.pretty_name, @election.user %>
  <br><br>
Name:
  <%= best_in_place_if edit_election_condition(current_user, @election), @election, :name %>
  <br>

Extra information:
  <%= best_in_place_if edit_election_condition(current_user, @election), @election, :info, nil: "Click here to add information" %>


<br><br>


  Candidates:
  <br>
  <% @election.candidates.each do |candidate| %>
    <%= best_in_place_if edit_election_condition(current_user, @election), candidate, :name %>
    <br>
  <% end %>

  <br>
  Start time: <%= @election.start_time %>
  <br>
  End time: <%= @election.finish_time %>
  <br>
  <br>


  Privacy:
  <%= best_in_place_if edit_election_condition(current_user, @election), @election, :privacy, type: :select, collection: [[false, "public"], [true, "private"]] %>
  <br>

  Show votes: 
  <%= best_in_place_if edit_election_condition(current_user, @election), @election, :display_votes_as_created, type: :select, collection: [[false, "when the election ends"], [true, "as they are created"]] %>

</div>