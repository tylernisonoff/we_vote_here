<% provide(:title, @election.name) %>

<div class="row">
    <aside class="span4">
      <section>
        <h3>Owner</h3>
        <p>
          <ul>
            <%= render @election.user %>
          </ul>
        </p>
      </section>
      <section>
        <h3>Election</h3>
        <p><%= render partial: "election_info", locals: {:election => @election} %></p>
      </section>
    </aside>
    <aside class="span7">
      <% if @election.questions.any? %>
        <h3>Questions (<%= @election.questions.count %>)</h3>
          <p>
            <ul>
              <%= render @election.questions %>
            </ul>
          </p>
      <% end %>
    </aside>
</div>