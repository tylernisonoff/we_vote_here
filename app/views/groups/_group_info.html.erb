<div>
	<br>
	<div style="float: left">
			<big><b>Name: <%= link_to group.name, group %></b></big>
	</div>
	<div class="right">
		<% if edit_group_condition(current_user, group) %>
			<%= link_to "edit group", edit_group_path(group) %>
	  	<% end %>
	 </div>
	<br>
	<div class="label label-success">
		<% if group.privacy %>
	  		private group
		<% else %>
	  		public group
		<% end %>
	</div>
</div>