<%= form_for @group do |f| %>
	<%= render 'shared/error_messages', object: f.object %>

	<%= f.text_field :name, value: @group.name %>
	
	<%= f.radio_button :privacy, 0, checked: !@group.privacy %>
	<%= f.label :privacy, "Public", style: "display:inline" %>
	<br>
	<%= f.radio_button :privacy, 1, checked: @group.privacy %>
	<%= f.label :privacy, "Private", style: "display:inline" %>

	<%= f.submit "Submit", class: "btn btn-large btn-primary btn-block" %>
<% end %>

<hr>

<%= link_to "Add voters", add_voters_group_path(@group), class: "btn btn-info btn-large btn-adjusted3-block" %>