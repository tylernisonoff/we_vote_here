<%= form_for @group do |f| %>
	<%= render 'shared/error_messages', object: f.object %>

	<%= f.text_field :name, value: @group.name %>
	
	<%= f.submit "Submit", disable_with: "Saving ...", class: "btn btn-large btn-primary btn-block" %>
<% end %>

<hr>

<%= link_to "Add voters", add_voters_group_path(@group), class: "btn btn-info btn-large btn-adjusted3-block" %>