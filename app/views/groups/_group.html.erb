<li class="lists">
  	<div style="float: left">
	  	<%= link_to group.name, group %>
	  	<% if group_follower_condition(current_user, group) %>
	  		- <%= link_to "unfollow", unfollow_group_user_path(id: current_user.id, group_id: group.id)%>
	  	<% end %>
	</div>
	<div class="right">
		<% if edit_group_condition(current_user, group) %>
			<%= link_to "edit", edit_group_path(group) %>
	  	<% else %>
			Owner: <%= link_to group.user.pretty_name, group.user %>
		<% end %>
	</div>
</li>